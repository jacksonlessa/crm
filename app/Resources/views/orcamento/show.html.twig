{% extends 'base.html.twig' %}

{% block body %}
    <h1>Orcamento</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ orcamento.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ orcamento.title }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ orcamento.value }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if orcamento.createdAt %}{{ orcamento.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if orcamento.updatedAt %}{{ orcamento.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('orcamento_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('orcamento_edit', { 'id': orcamento.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
