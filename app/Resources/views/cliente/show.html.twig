{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cliente</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cliente.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cliente.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ cliente.email }}</td>
            </tr>
            <tr>
                <th>Telefone</th>
                <td>{{ cliente.telefone }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if cliente.createdAt %}{{ cliente.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if cliente.updatedAt %}{{ cliente.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

	<hr />
	
	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Projeto</th>
				<th>Visualizar</th>
			</tr>
		</thead>
        <tbody>
            {% for projeto in cliente.projetos %}
            <tr>
                <td>{{ projeto.id }}</td>
                <td>{{ projeto.title }}</td>
                <td>{{ projeto.id }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
	
	<hr />
	
	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Orcamento</th>
				<th>Pre√ßo</th>
				<th>Visualizar</th>
			</tr>
		</thead>
        <tbody>
            {% for orcamento in cliente.orcamentos %}
            <tr>
                <td>{{ orcamento.id }}</td>
                <td>{{ orcamento.title }}</td>
                <td>{{ orcamento.value }}</td>
                <td>{{ orcamento.id }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('cliente_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cliente_edit', { 'id': cliente.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    
    {{ dump(cliente) }}
{% endblock %}
